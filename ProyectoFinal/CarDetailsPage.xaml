<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.CarDetailsPage">
    <StackLayout Spacing="10" Padding="20">
        <Label Text="{Binding CarName}" FontSize="24" HorizontalOptions="Center" />

        <Label Text="{Binding CarDetails}" FontSize="16" />

        <Button Text="Encender" Clicked="OnEncenderClicked" />
        <Button Text="Apagar" Clicked="OnApagarClicked" />
        <Button Text="Acelerar" Clicked="OnAcelerarClicked" />
        <Button Text="Frenar" Clicked="OnFrenarClicked" />
    </StackLayout>
</ContentPage>
